{{>layouts/header}}
<h3>가게 수정 페이지</h3>
<div class="storeEditBox">

    <form class="storeUpdateForm">

        <div>가게이름</div>
        <input type="text" id="sname" name="sname"><br/>
        <div class="namebox"> </div>

        <div>전화번호</div>
        <input type="text" id="sphone" name="sphone"><br/>
        <div class="phnoebox"> </div>

        <div> 가게 주소 </div>
        <input type="text" name="sadress" class="sadress" id="sample5_address" placeholder="주소">
        <input  type="button" onclick="sample5_execDaumPostcode()" value="주소 검색"><br>
        <div id="map" style="width:300px;height:300px;margin-top:10px;display:none"></div>


        <script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
        <script src="//dapi.kakao.com/v2/maps/sdk.js?appkey=26d062567ebd55ff37aa7c8a6e58c325&libraries=services"></script>


        <div> 가게 설명 </div>
        <input type="text" id="scontent" name="scontent"><br/>
        <div class="contentbox"> </div>

        <div> 사업자 번호 </div>
        <input type="text" id="snumber" name="snumber"><br/>
        <div class="snumberbox"> </div>

        <div> 지역 선택</div>
        <select id="categorya" name="categorya">
            <option value="1">안산</option>
            <option value="2">시흥</option>
            <option value="3">수원</option>
            <option value="4">부천</option>
            <option value="5">안양</option>
            <option value="6">서울</option>
        </select>

        <div> 음식 분류</div>
        <select id="categoryb" name="categoryb">
            <option value="1">한식</option>
            <option value="2">일식</option>
            <option value="3">중식</option>
            <option value="4">양식</option>
            <option value="5">분식</option>
            <option value="6">패스트푸드</option>
        </select>
        <div class="preImgBox"></div>


        <button class="regStorebtn" type="button" onclick="onUpdate()"> 가게수정</button><br/>
    </form>
</div>
<script src="/js/storeEdit.js"></script>

{{>layouts/footer}}